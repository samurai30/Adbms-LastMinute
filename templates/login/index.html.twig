{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    <div class="container">
        <br>
        <div class="row">
            <div class="col s12">
                <ul class="tabs cyan">

                    <li class="tab col s3"><a class="white-text cyan lighten-3" href="#student">Student Login</a></li>
                    <li class="tab col s3"><a class="white-text cyan lighten-2" href="#teacher">Teacher Login</a></li>
                </ul>
            </div>
            <div id="student" class="col s12">
                <div>
                    <h4>STUDENT</h4>
                </div>
                <form class="col s12" action="{{ path('studentLogin') }}" id="formLogin" method="post">
                    <div class="row">
                        <div class="input-field col s12">
                            <input placeholder="Username" id="username" name="_username" type="text" required="required" class="validate">
                            <label for="username">Username</label>
                        </div>
                        <div class="input-field col s12">
                            <input id="password" placeholder="password" name="_password" type="password" class="validate" required="required">
                            <label for="password">Password</label>
                        </div>
                    </div>
                    <div class="row center">
                        {% if error %}
                            <p>{{ error.message }}</p>
                        {% endif %}
                    </div>
                    <div class="row right">
                        <button type="submit" id="Login" name="Login" class="btn btn-large light-blue lighten-2">Login</button>
                    </div>
                    <div class="row">
                        <a href="#">Forgot Password?</a>
                    </div>

                </form>


            </div>
            <div id="teacher" class="col s12">
                <div>
                    <h4>TEACHER</h4>
                </div>
                <form class="col s12" action="{{ path('teacherLogin') }}" id="teacherForm" method="post">
                    <div class="row">
                        <div class="input-field col s12">
                            <input placeholder="Username" id="username" name="_username" type="text" required="required" class="validate">
                            <label for="username">Username</label>
                        </div>
                        <div class="input-field col s12">
                            <input id="password" placeholder="password" name="_password" type="password" class="validate" required="required">
                            <label for="password">Password</label>
                        </div>
                    </div>
                    <div class="row center">
                        {% if error %}
                            <p>{{ error.message }}</p>
                        {% endif %}
                    </div>
                    <div class="row right">
                        <button type="submit" id="Login" name="Login" class="btn btn-large light-blue lighten-2">Login</button>
                    </div>
                    <div class="row">
                        <a href="#">Forgot Password?</a>
                    </div>

                </form>


            </div>
        </div>

    </div>
{% endblock %}
