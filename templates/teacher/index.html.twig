{% extends 'base.html.twig' %}

{% block title %}Hello TeacherController!{% endblock %}

{% block body %}
   {% if is_granted('ROLE_TEACHER') %}

       <main class="valign-wrapper">
           <div class="container white z-depth-3" style="margin-top: 5%; padding: 5%; border-radius:20px;">

               <h3>Add Questions</h3>
               <div class="file-field input-field">
                   <div class="btn">
                       <span>File</span>
                       <input type="file" id="Question" required accept="image/*">
                   </div>
                   <div class="file-path-wrapper">
                       <input class="file-path validate" type="text">
                   </div>
               </div>
               <div class="row">
                   <div id="resultQuestion"></div>


               </div>

       </main>

    {% endif %}
{% endblock %}
